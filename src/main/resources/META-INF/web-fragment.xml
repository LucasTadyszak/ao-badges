<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
  version="3.0"
  metadata-complete="false">
	<name>@{project.artifactId}</name>
	<description>@{project.description}</description>
	<!-- Filter to set max-age header for badges -->
	<filter>
		<filter-name>ao-badges-max-age-one-day-filter</filter-name>
		<filter-class>com.aoindustries.servlet.filter.AddResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>max-age=86400</param-value>
		</init-param>
		<init-param>
			<param-name>patterns</param-name>
			<param-value>*.svg</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>ao-badges-max-age-one-day-filter</filter-name>
		<url-pattern>/ao-badges/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
</web-fragment>
